<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Input</title>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css" />
</head>

<body>
  <div class="bg">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6 col-lg-4">
          <div class="d-flex">
            <% for(const i of memes){ %>
                <img class="meme_image" id=<%= i.id %> src=<%= i.url %>>
            <% } %>
          </div>
          <form class="form-container" action="/generate" method="POST" enctype="application/x-www-form-urlencoded multipart/form-data">
            <h3 class="text-center">Generate your own memes</h3>
            
            <div class="form-group">
              <label for="">ID</label>
              <input id="template_id" type="text" name="template_id" class=" form-control" required autofocus />
            </div>
            <div class="form-group">
              <label for="">Username</label>
              <input id="email" type="text" name="username" class=" form-control" placeholder="Enter your username"
                required />
            </div>
            <div class="form-group">
              <label class="pass">Password</label>
              <input type="password" name="password" class="inpass form-control" placeholder="Enter your Password"
                required />
            </div>
            <div class="form-group">
              <label for="">Upper text</label>
              <input  type="text" name="text0" class=" form-control" required autofocus />
            </div>
            <div class="form-group">
              <label for="">Lower text</label>
              <input  type="text" name="text1" class=" form-control" required autofocus />
            </div>
            <button type="submit" class="btn btn-dark form-control " style="margin-top: 2rem;" >Send</button>
            


          </form>
        </div>

      </div>

    </div>
  </div>



</body>

<script>
  var images = document.getElementsByClassName("meme_image");
  var templateInput = document.getElementById("template_id");
  for(const i of images){
      i.addEventListener('click', (e) => {
          templateInput.value = i.id;
      });
  }
</script>

</html>